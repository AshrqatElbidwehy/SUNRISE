@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="container">
    <div class="login-box">
        <h1>Login</h1>
        <br>
        <form id="account" method="post">
            <input asp-for="Input.Email" id="email" aria-required="true" placeholder="Enter email" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <input asp-for="Input.Password" id="password" aria-required="true" placeholder="Enter password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </form>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">New to our website? Register</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
