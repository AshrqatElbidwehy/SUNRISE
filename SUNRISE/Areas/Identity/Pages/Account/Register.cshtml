@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="login-box">
        <h1>Register</h1>
        <br>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <input asp-for="Input.Email" id="email" aria-required="true" placeholder="Enter email" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <input asp-for="Input.Password" id="password" aria-required="true" placeholder="Enter password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <input asp-for="Input.ConfirmPassword" id="confirm_password" aria-required="true" placeholder="Confirm password" />
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <input type="submit" value="Register">
        </form>
        <a href="/identity/account/login">Already have an account? Log in</a>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
